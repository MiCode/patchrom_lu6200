    <Preference android:title="@string/sp_status_pri_version_NORMAL" android:key="pri_version" android:summary="@string/device_info_default" style="?android:preferenceInformationStyle" />
    <PreferenceScreen android:title="@string/sp_power_save_battery_NORMAL" android:key="battery_dcm">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.deviceinfo.Battery" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/sp_regulatory_information_NORMAL" android:key="regulatory_dcm">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.deviceinfo.RegulatoryInformation" />
