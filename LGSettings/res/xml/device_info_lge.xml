<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/about_settings"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen android:title="@string/system_update_settings_list_item_title" android:key="system_update_settings" android:summary="@string/sp_SWUpdateSummary_NORMAL">
        <intent android:action="android.settings.SOFTWARE_UPDATE_SETTINGS" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/status_operator" android:key="network" android:summary="@string/sp_NetworkType_NORMAL">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.lge.DeviceInfoLgeNetwork" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/sp_phone_identity_NORMAL" android:key="phoneidentity">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.lge.DeviceInfoLgePhoneIdentity" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/power_usage_summary_title" android:key="battery" android:summary="@string/sp_BatterySummary_NORMAL" android:fragment="com.android.settings_ex.lge.DeviceInfoLgeBattery" />
    <PreferenceScreen android:title="@string/sp_HardwareInfo_NORMAL" android:key="hardwareinformation" android:summary="@string/sp_HWversion_NORMAL">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings_ex.lge.DeviceInfoLgeHardwareInformation" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/sp_Softwareinfo_NORMAL" android:key="softwareinformation" android:summary="@string/sp_SWSummary_NORMAL" android:fragment="com.android.settings_ex.lge.DeviceInfoLgeSoftwareInformation" />
    <PreferenceScreen android:title="@string/legal_information" android:key="container" android:summary="@string/sp_LegalInfoSummary_NORMAL">
        <PreferenceScreen android:title="@string/copyright_title" android:key="copyright">
            <intent android:action="android.settings.COPYRIGHT" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/license_title" android:key="license">
            <intent android:action="android.settings.LICENSE" />
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/terms_title" android:key="terms">
            <intent android:action="android.settings.TERMS" />
        </PreferenceScreen>
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/settings_safetylegal_title" android:key="safetylegal">
        <intent android:action="android.settings.SAFETY" />
    </PreferenceScreen>
</PreferenceScreen>
